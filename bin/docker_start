#!/bin/bash
bundle check || bundle install --jobs 4

until curl http://mes-elasticsearch:9200/_cat/indices 2>&1 >> /dev/null; do
  echo "MES is unavailable - sleeping"
  sleep 1
done

until curl http://eva-elasticsearch:9200/_cat/indices 2>&1 >> /dev/null; do
  echo "EVA is unavailable - sleeping"
  sleep 1
done

$@
